<div class="Title">Menu</div>
<section class="section-sign">
  <%= form_with(url: "/menus", method: "post") do |form| %>

    <div class="Form-section">
      <p class="FormInput--label">Menu Name:</p>
      <%= form.text_field :name, class: "Form--input" %>
    </div>

    <div class="Form-section">
      <%= form.submit "Add Menu", class: "Form--submit" %>
    </div>
  <% end %>
</section>
