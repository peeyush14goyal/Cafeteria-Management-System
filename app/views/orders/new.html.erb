  <% MenuItem.activeMenuItems(Menu.isActive.id).each do |item| %>
    <div class="CurrentOrderItems">
      <div class="CurrentOrderItems--Header">

        <div class="CurrentOrderItems--itemName">
          <%= item.name %>
        </div>
        <%= form_with(url: "/current_orders/#{item.id}", method: "put") do |form| %>
          <div>
            Rs <%= item.price%>
            <%= submit_tag "Add", class: "CurrentOrderItems--AddBtn" %>
          </div>

        </div>

        <div>
          <p class="CurrentOrderItems--Para">Quantity : <%= form.number_field :quantity, in: 0...10 %></p>
        </div>
      <% end %>

    </div>
  <% end %>
  <%= form_with(url: "/users/cart", method: "get") do %>
    <div class="CurrentOrderItems--orderBtnDiv">
      <%= submit_tag "Create Order", class: "CurrentOrderItems--orderButton" %>
    </div>
  <% end %>
